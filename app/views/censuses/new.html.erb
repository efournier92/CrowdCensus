<h1>Poll CrowdCensus</h1>

<div class="new_census_container">
  <%= simple_form_for Census.new do |f| %>
    <%= f.input :description, label:'Description' %>
    <%= f.input :option_01, label: 'Resolution' %>
    <%= f.input :option_02, label: 'Resolution' %>
    <%= f.input :option_03, label: 'Resolution' %>
    <%= f.input :duration,  collection: Census::DURATIONS.keys, selected: 1 %>
    <div class="button_center">
      <%= f.button :submit, 'Poll Crowdcensus'%>
    </div>
  <% end %>
</div>
